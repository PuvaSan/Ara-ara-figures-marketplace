<div class="container w-50 shadow-sm p-3 mb-5 bg-white rounded">
  <%= simple_form_for @figure do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.association :anime %>
    <div class="d-flex">
      <%= f.input :pick_up, as: :boolean, label_html: { class: "me-3"} %>
      <%= f.input :delivery, as: :boolean %>
    </div>
    <%= f.input :pick_up_location%>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Add Figure" %>
  <% end %>
</div>

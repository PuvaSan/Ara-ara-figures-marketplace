<div class="container">
  <%= simple_form_for @figure do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.association :anime %>
    <%= f.input :pick_up, as: :boolean %>
    <%= f.input :delivery, as: :boolean %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit %>
  <% end %>
</div>

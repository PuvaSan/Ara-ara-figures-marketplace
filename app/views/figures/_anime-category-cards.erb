<div class="d-flex justify-content-between container mb-4">
  <% @animes.each do |anime| %>
    <%= link_to anime_path(anime) do %>
      <div class="anime-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= anime.title %>
      </div>
    <% end %>
  <% end %>
</div>

<%= render 'anime-category-cards' %>
<%= render 'banner' %>
<div class="container mt-4">
  <h1>All Figures</h1>
  <div class="row">
    <% @figures.each do |figure| %>
      <div class="col-md-4">
        <div class="card hadow p-3 mb-5 bg-white rounded">
          <div class="card-body">
            <%= image_tag figure.photos.first, class: "object-fit-scale", size: "200x200" if figure.photos.any? %>
            <h5 class="card-title"><%= figure.name %></h5>
            <p class="card-text">Â¥ <%= figure.price %></p>
            <p class="card-text text-truncate"><%= figure.description%></p>
            <% unless figure.user == current_user %>
              <%= link_to 'Place Order', new_figure_order_path(figure), class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

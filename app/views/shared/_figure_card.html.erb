<% @figures.each do |figure| %>
  <div class="all-figures-card" style="max-width: 21rem;" data-bs-toggle="collapse" href="#collapse" role="button" aria-expanded="false" aria-controls="collapse">
    <div class="small-card">
      <div class="">
        <div class="small-card-text">
          <h5 class="figure-name"><%= figure.name %></h5>
          <p class="figure-price">Â¥ <%= figure.price %></p>
        </div>
      </div>
      <div class="img-container">
        <%= image_tag figure.photos.first, class: "figure-img" if figure.photos.any? %>
      </div>
    </div>
    <%# collapse div below %>
    <div class="collapse" id="collapse">
      <div class="collapse-card">
        <p class="figure-description"><%= figure.description%></p>
        <div class="figure-card-bottom">
          <% unless figure.user == current_user %>
            <%= link_to 'Place Order', new_figure_order_path(figure), class: 'btn btn-primary' %>
          <% else %>
            <p class="figure-sold">Sold</p>
          <% end %>
          <h5 class="anime-name"><%= figure.anime.title %></h5>
        </div>
      </div>
    </div>
  </div>
<% end %>
